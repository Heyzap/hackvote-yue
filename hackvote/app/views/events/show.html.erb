<% provide(:title, @event.title) %>


<h1><%= @event.title %></h1>
<div>
	<h2>Add new Project</h2>
	<%= render 'shared/project_form' %>
	<%= button_to "Close Voting", close_path, params: { id: @event.id }, confirm: "are you sure?" %>
</div>
<div>
	<%= cookies.permanent[@event.id] %> votes remaining
</div>

<div>
	<h2>Projects</h2>
	<% @projects.each do |project| %>
		<li>
			<%= "#{project.name} by #{project.creators}" %>
			<!-- show button only if have votes remaining -->
			<% if cookies.permanent[@event.id].to_i > 0 %>
				<%= button_to "vote", vote_path, params: { project_id: project.id }%>
			<% end %>
		</li>
	<% end %>
</div>